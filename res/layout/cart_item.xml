<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light">
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">
        <CheckBox
            android:checked="true"
            style="@style/CustomCheckboxTheme"
            android:id="@+id/cb_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_image"
            android:layout_toRightOf="@+id/cb_checkbox"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_image"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这个商品的名字这个商品的名字这个商品的名字这个商品的名字这个商品的名字这个商品的名字这个商品的名字"
            android:lines="1"
            android:ellipsize="end"
            android:paddingRight="60dp"
            android:textColor="@color/ebpay_text_orange1"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/tv_add"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/add_cart"/>
        <TextView
            android:id="@+id/tv_num"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2)"
            android:textColor="#f06"/>
        <Button
            android:id="@+id/tv_reduce"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/tv_num"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/appitem_del_btn_normal"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥290"
            android:textColor="@color/main_orange"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"/>

    </RelativeLayout>

</RelativeLayout>